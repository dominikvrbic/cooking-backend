{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "name": "recipe",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "number_of_servings": {
      "type": "integer",
      "min": 1,
      "required": true
    },
    "time": {
      "type": "integer",
      "min": 0,
      "required": true
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "steps.steps",
      "required": true,
      "min": 1
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "ingredients.ingredients",
      "required": true,
      "min": 1
    },
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "recipes"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "reviews": {
      "collection": "review",
      "via": "recipe"
    },
    "description": {
      "type": "text"
    }
  }
}
